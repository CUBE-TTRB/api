// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  role Role @default(USER)
  confirmedAt DateTime?
  createdAt DateTime?
  Authentification Authentification?
  Resources Resource[]
  Comments Comment[]
}

model Authentification {
  id       Int   @id @default(autoincrement())
  password Bytes
  salt     Bytes
  user     User  @relation(fields: [userId], references: [id])
  userId   Int @unique
}

model Resource {
  id          Int                 @id @default(autoincrement())
  user        User                @relation(fields: [userId], references: [id])
  userId      Int
  visibility  Visibility
  state       State               @default(SUBMITTED)
  type        Type
  category    Category?           @relation(fields: [categoryId], references: [id])
  categoryId  Int
  relations   Relation[]
  title       String?
  body        Json?
  date        DateTime?
  location    String?
  link        String?
  updatedAt   DateTime
  createdAt   DateTime
  attached_files AttachedFile[]
  comments    Comment[]
}

model Comment {
  id          Int                 @id @default(autoincrement())
  user        User                @relation(fields: [userId], references: [id])
  userId      Int
  resource    Resource            @relation(fields: [resourceId], references: [id])
  resourceId  Int
  text        String
  updatedAt   DateTime
  createdAt   DateTime
  parentComment     Comment?      @relation("commentResponse", fields: [parentCommentId], references: [id])
  parentCommentId   Int?
  responses         Comment[]     @relation("commentResponse")
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  default Boolean @default(false)
  resources Resource[]

  @@unique(fields: [id, default])
}

model Relation {
  id Int @id @default(autoincrement())
  name String @unique
  resources Resource[]
}

model AttachedFile {
  id Int @id @default(autoincrement())
  key String @unique
  contentType String
  resource Resource @relation(fields: [resourceId], references: [id])
  resourceId Int
  updatedAt   DateTime
  createdAt   DateTime
}

enum Type {
  ACTIVITY
  ARTICLE
  COURSE
  EXERCISE
  BOOKLET
  VIDEOGAME
  VIDEO
  CHALLENGE_CARD
}

enum Visibility {
  PRIVATE
  PUBLIC
  SHARED
}

enum State {
  SUBMITTED
  REFUSED
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  MODERATOR
  USER
}
